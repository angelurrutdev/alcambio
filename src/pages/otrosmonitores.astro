---
import Layout from "@layouts/Layout.astro";
import Header from "@components/Header.astro";
import OtherMonitors from "@components/OtherMonitors.astro";

import { getMonitor } from "@lib/currencymonitor";
const getMonitorItalcambio = await getMonitor("italcambio");
const getMonitorCriptodolar = await getMonitor("criptodolar");
---

<Layout
  title="VeCambio - El Equivalente en Bolivares de otras plataformas"
  description="El Equivalente en Bolivares de otras plataformas: DolarToday, CriptoDolar, UpHold, Binance, Paypal, Skrill"
>
  <Header
    value={getMonitorCriptodolar.monitors.bcv.price}
    value_datetime={getMonitorCriptodolar.datetime.date}
    sign="$"
  />

  <section
    transition:name="bg_section"
    class="h-screen overflow-y-auto mt-12 mx-auto w-[340px] md:w-1/2 rounded-3xl bg-white border-2 border-transparent dark:text-neutral-100 dark:bg-raisin-black p-6 lg:p-8 text-gray-900"
  >
    <h2 class="text-base md:text-lg dark:text-white text-gray-900 font-bold">
      Tasa de otras plataformas:
    </h2>
    <OtherMonitors
      monitor={getMonitorCriptodolar.monitors.binance.title}
      monitor_tasa={getMonitorCriptodolar.monitors.binance.price}
      datetime={getMonitorCriptodolar.monitors.binance.last_update}
      image={getMonitorCriptodolar.monitors.binance.image}
      Twomonitor={getMonitorCriptodolar.monitors.cripto_dolar.title}
      Twomonitor_tasa={getMonitorCriptodolar.monitors.cripto_dolar.price}
      Twodatetime={getMonitorCriptodolar.monitors.cripto_dolar.last_update}
      Twoimage={getMonitorCriptodolar.monitors.cripto_dolar.image}
    />
    <OtherMonitors
      monitor={getMonitorCriptodolar.monitors.dolar_today.title}
      monitor_tasa={getMonitorCriptodolar.monitors.dolar_today.price}
      datetime={getMonitorCriptodolar.monitors.dolar_today.last_update}
      image={getMonitorCriptodolar.monitors.dolar_today.image}
      Twomonitor={getMonitorCriptodolar.monitors.paypal.title}
      Twomonitor_tasa={getMonitorCriptodolar.monitors.paypal.price}
      Twodatetime={getMonitorCriptodolar.monitors.paypal.last_update}
      Twoimage={getMonitorCriptodolar.monitors.paypal.image}
    />

    <OtherMonitors
      monitor={getMonitorCriptodolar.monitors.skrill.title}
      monitor_tasa={getMonitorCriptodolar.monitors.skrill.price}
      datetime={getMonitorCriptodolar.monitors.skrill.last_update}
      image={getMonitorCriptodolar.monitors.skrill.image}
      Twomonitor={getMonitorCriptodolar.monitors.uphold.title}
      Twomonitor_tasa={getMonitorCriptodolar.monitors.uphold.price}
      Twodatetime={getMonitorCriptodolar.monitors.uphold.last_update}
      Twoimage={getMonitorCriptodolar.monitors.uphold.image}
    />

    <h2 class="text-base md:text-lg dark:text-white text-gray-900 font-bold">
      Tasa de otros Paises:
    </h2>

    <OtherMonitors
      monitor={getMonitorItalcambio.monitors.usd.title}
      monitor_tasa={getMonitorItalcambio.monitors.usd.price}
      datetime={getMonitorItalcambio.monitors.usd.last_update}
      image="/eeuu.webp"
      Twomonitor={getMonitorItalcambio.monitors.gbp.title}
      Twomonitor_tasa={getMonitorItalcambio.monitors.gbp.price}
      Twodatetime={getMonitorItalcambio.monitors.gbp.last_update}
      Twoimage="ing.webp"
    />

    <OtherMonitors
      monitor={getMonitorItalcambio.monitors.ars.title}
      monitor_tasa={getMonitorItalcambio.monitors.ars.price}
      datetime={getMonitorItalcambio.monitors.ars.last_update}
      image="/arg.webp"
      Twomonitor={getMonitorItalcambio.monitors.bob.title}
      Twomonitor_tasa={getMonitorItalcambio.monitors.bob.price}
      Twodatetime={getMonitorItalcambio.monitors.bob.last_update}
      Twoimage="bol.webp"
    />

    <OtherMonitors
      monitor={getMonitorItalcambio.monitors.brl.title}
      monitor_tasa={getMonitorItalcambio.monitors.brl.price}
      datetime={getMonitorItalcambio.monitors.brl.last_update}
      image="brl.webp"
      Twomonitor={getMonitorItalcambio.monitors.clp.title}
      Twomonitor_tasa={getMonitorItalcambio.monitors.clp.price}
      Twodatetime={getMonitorItalcambio.monitors.clp.last_update}
      Twoimage="chl.webp"
    />

    <OtherMonitors
      monitor={getMonitorItalcambio.monitors.cop.title}
      monitor_tasa={getMonitorItalcambio.monitors.cop.price}
      datetime={getMonitorItalcambio.monitors.cop.last_update}
      image="col.webp"
      Twomonitor={getMonitorItalcambio.monitors.dop.title}
      Twomonitor_tasa={getMonitorItalcambio.monitors.dop.price}
      Twodatetime={getMonitorItalcambio.monitors.dop.last_update}
      Twoimage="rd.webp"
    />

    <OtherMonitors
      monitor={getMonitorItalcambio.monitors.pen.title}
      monitor_tasa={getMonitorItalcambio.monitors.pen.price}
      datetime={getMonitorItalcambio.monitors.pen.last_update}
      image="peru.webp"
      Twomonitor={getMonitorItalcambio.monitors.uyu.title}
      Twomonitor_tasa={getMonitorItalcambio.monitors.uyu.price}
      Twodatetime={getMonitorItalcambio.monitors.uyu.last_update}
      Twoimage="uyu.webp"
    />
  </section>
</Layout>
