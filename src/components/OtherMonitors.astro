---
const {
  monitor,
  datetime,
  image,
  monitor_tasa,
  Twomonitor,
  Twomonitor_tasa,
  Twodatetime,
  Twoimage,
} = Astro.props;

interface Props {
  monitor: string;
  monitor_tasa: string;
  datetime: string;
  image: string;

  Twomonitor: string;
  Twomonitor_tasa: string;
  Twodatetime: string;
  Twoimage: string;
}
---

<div class="">
  <div
    class="overflow-hidden p-1 flex flex-col gap-x-5 md:grid md:grid-cols-2 md:gap-3"
  >
    <label
      class="transition-colors focus-visible:outline-none focus-visible:ring-1 disabled:pointer-events-none disabled:opacity-50 dark:focus-visible:ring-neutral-700 focus-visible:ring-neutral-500 border border-neutral-200 bg-white shadow-sm hover:bg-neutral-100 hover:text-neutral-900 dark:border-neutral-800 dark:bg-cuber-black dark:hover:bg-raisin-black dark:hover:text-neutral-50 dark:hover:border-neutral-700/50 my-1 snap-center flex flex-row md:min-w-64 min-w-52 items-start rounded-xl p-2 text-secondary dark:text-neutral-100 overflow-hidden has-[:checked]:bg-accent/5 has-[:checked]:text-accent has-[:checked]:ring-accent dark:has-[:checked]:dark:bg-accent/15 dark:ring-secondary ring-gray-200 ring-2"
    >
      <input type="radio" name={monitor} hidden="" checked="" />
      <div class="size-11 aspect-square me-3 rounded-full p-[2px]">
        <img
          src={image}
          class="aspect-square object-cover rounded-full size-10 md:min-h-11 md:min-w-11"
          alt={monitor}
          width="42"
          height="42"
          loading="lazy"
          decoding="async"
        />
      </div>
      <div class="md:ml-1">
        <p class="text-lg truncate w-28 md:w-48">{monitor}</p>
        <p class="text-sm opacity-80">Tasa: Bs.S&nbsp;{monitor_tasa}</p>
        <p class="text-sm opacity-80">{datetime}</p>
      </div>
    </label>

    <label
      class="transition-colors focus-visible:outline-none focus-visible:ring-1 disabled:pointer-events-none disabled:opacity-50 dark:focus-visible:ring-neutral-700 focus-visible:ring-neutral-500 border border-neutral-200 bg-white shadow-sm hover:bg-neutral-100 hover:text-neutral-900 dark:border-neutral-800 dark:bg-cuber-black dark:hover:bg-raisin-black dark:hover:text-neutral-50 dark:hover:border-neutral-700/50 my-1 snap-center flex flex-row md:min-w-64 min-w-52 items-start rounded-xl p-2 text-secondary dark:text-neutral-100 overflow-hidden has-[:checked]:bg-accent/5 has-[:checked]:text-accent has-[:checked]:ring-accent dark:has-[:checked]:dark:bg-accent/15 dark:ring-secondary ring-gray-200 ring-2"
    >
      <input type="radio" name={Twomonitor} hidden="" checked="" />
      <div class="size-11 aspect-square me-3 rounded-full p-[2px]">
        <img
          src={Twoimage}
          class="aspect-square object-cover rounded-full w-10 h-10 md:min-h-11 md:min-w-11"
          alt={Twomonitor}
          width="42"
          height="42"
          loading="lazy"
          decoding="async"
        />
      </div>
      <div class="md:ml-1">
        <p class="text-lg truncate w-28 md:w-48">{Twomonitor}</p>
        <p class="text-sm opacity-80">Tasa: Bs.S&nbsp;{Twomonitor_tasa}</p>
        <p class="text-sm opacity-80">{Twodatetime}</p>
      </div>
    </label>
  </div>
</div>
